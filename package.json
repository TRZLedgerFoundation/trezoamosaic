{
    "name": "trezoamosaic-token-extensions-admin",
    "version": "0.1.0",
    "description": "TypeScript SDK, CLI, and UI for managing standard token types on Trezoa (ex: Stablecoin & Arcade Tokens)",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "ui": "turbo dev --filter=@trezoamosaic/app",
        "test:unit": "SKIP_INTEGRATION=true turbo test -- --passWithNoTests",
        "test:integration": "turbo test:integration",
        "test:all": "turbo test -- --passWithNoTests",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "turbo type-check",
        "clean": "turbo clean",
        "precommit": "pnpm run format && pnpm run lint:fix",
        "check": "pnpm run build && pnpm run format:check && pnpm run lint && pnpm run type-check"
    },
    "keywords": [
        "trezoa",
        "token-2022",
        "extensions",
        "stablecoin",
        "arcade-token",
        "typescript",
        "sdk",
        "cli"
    ],
    "author": "Trezoa Foundation",
    "license": "MIT",
    "devDependencies": {
        "@trezoa/prettier-config-trezoa": "0.0.5",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "eslint": "^9.32.0",
        "prettier": "^3.6.2",
        "turbo": "latest",
        "typescript": "^5.9.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "packageManager": "pnpm@10.24.0",
    "pnpm": {
        "overrides": {
            "@trezoa/accounts": "^5.0.0",
            "@trezoa/addresses": "^5.0.0",
            "@trezoa/signers": "^5.0.0",
            "@trezoa/rpc": "^5.0.0",
            "@trezoa/rpc-types": "^5.0.0",
            "@trezoa/transactions": "^5.0.0",
            "@trezoa/transaction-messages": "^5.0.0",
            "@trezoa/keys": "^5.0.0",
            "@trezoa/codecs": "^5.0.0",
            "@trezoa-program/compute-budget": "^0.11.0"
        }
    }
}
