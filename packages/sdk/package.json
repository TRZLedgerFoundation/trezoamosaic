{
    "name": "@trezoamosaic/sdk",
    "version": "0.1.0",
    "description": "SDK for TrezoaMosaic with helper functions for issuance and management of any token",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -b",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "node src/scripts/test-with-validator.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@trezoa/kit": "^5.0.0",
        "@trezoa-program/memo": "^0.10.0",
        "@trezoa-program/system": "^0.10.0",
        "@trezoa-program/token-2022": "^0.6.1",
        "@trezoa/sysvars": "^5.0.0",
        "@token-acl/abl-sdk": "^0.2.0",
        "@token-acl/sdk": "^0.2.7"
    },
    "_dependencyNotes": {
        "trezoaKitV5": "This SDK uses Trezoa Kit v5.0 ecosystem packages (@trezoa/kit@5.0, @trezoa/sysvars@5.0, @trezoa-program/token-2022@0.6.1). These are published to npm under the 'experimental' or 'next' tag. The root pnpm-lock.yaml contains overrides to ensure consistent resolution across all @trezoa/* packages. See: https://github.com/anza-xyz/kit"
    },
    "devDependencies": {
        "@jest/test-sequencer": "^29.7.0",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "eslint": "^9.39.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "keywords": [
        "trezoa",
        "token-2022",
        "extensions",
        "core",
        "hooks"
    ]
}
